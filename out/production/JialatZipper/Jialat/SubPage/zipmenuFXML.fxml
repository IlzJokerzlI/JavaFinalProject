<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onDragDetected="#onWindowDragged" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Jialat.SubPage.ZipSubPageController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="3.0" HBox.hgrow="NEVER">
                     <children>
                        <Label text="Zip Path" />
                        <HBox alignment="BOTTOM_CENTER" spacing="10.0" VBox.vgrow="NEVER">
                           <children>
                              <TextField fx:id="zipPathField" onAction="#onPathFieldComplete" onKeyReleased="#onPathFieldEdited" HBox.hgrow="ALWAYS" />
                              <Button fx:id="zipPathChooserButton" mnemonicParsing="false" onAction="#onChoosePath" text="Choose" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Label fx:id="pathErrorLabel" text="Path does not exist" textFill="RED" visible="false" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox alignment="CENTER_LEFT" spacing="3.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="File Name" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <TextField fx:id="fileNameField" onKeyReleased="#onNameFieldEdited" HBox.hgrow="ALWAYS" />
                        <Label text=".zip" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                  <Label fx:id="fileNameErrorLabel" text="File name must be filled" textFill="#ee0000" visible="false" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="3.0" VBox.vgrow="NEVER">
               <children>
                  <CheckBox fx:id="encryptCheckBox" mnemonicParsing="false" onAction="#setEncryptStatus" text="Encrypt" />
                  <PasswordField fx:id="passwordField" disable="true" onKeyReleased="#onPasswordFieldEdited" />
                  <Label fx:id="passwordError" text="Password must at least length 8" textFill="RED" visible="false" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <ProgressBar fx:id="progressBar" maxWidth="300.0" progress="0.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="executeZipButton" disable="true" mnemonicParsing="false" onAction="#execute" text="Zip" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closeWindow" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
